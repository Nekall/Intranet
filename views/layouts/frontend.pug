doctype html
html(lang="en")
    head 
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description", content="A Twitter Clone")
        meta(name="author", content="Rettiwt")
        link(rel='icon', sizes='16x16 32x32 48x48 64x64', href='./images/logo.svg')
        link(rel="stylesheet", href="/styles/main.css")
        title Rettiwt
    body
        nav.__navbar
            a.__navbar-brand(href="/")
                img(src="./images/logo.svg", alt="Logo App")

        block content

        menu.__menu 

            .__log 
                if user
                    a.__navbar-item(href="/users/#{user.username}") #{user.username}
                    a.__navbar-item(href="/logout") Logout
                else
                    a.__navbar-item(href="/login") Login
                    a.__navbar-item(href="/register") Register
        
